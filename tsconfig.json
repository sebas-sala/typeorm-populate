{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,                            
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,                 
    "allowSyntheticDefaultImports": true,           
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
    },
    "esModuleInterop": true,                          
    "moduleResolution": "node",
    "skipLibCheck": true,                                
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,           
    "strict": true,
    "types": ["bun-types"], 
  }
}
